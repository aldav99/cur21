
<% if logged_in? %>
  <p class="nav user">Welcome, <b><%= current_user.email %> Guru</b></p>
  <p class="nav user">Welcome, <b><%= current_user.name %> Guru</b></p>
  <p class="nav user"><%= link_to "Log out", logout_path, method: :delete %></p>
<% else %>
  <p class="nav user"><%= link_to "Log in", login_path %></p>
  <p class="nav user"><%= link_to "Регистрация", signup_path %></p>
<% end %>

