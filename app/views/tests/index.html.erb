<div class="row justify-content-center">
  <h3><%= t('tests.index.header') %></h3>
</div>


<div class="row justify-content-center">
  <%= link_to t('all_badges'), badges_path %>
</div>

<div class="row justify-content-center">
  <%= link_to t('yours_badges'), achievements_badges_path%>
</div><br>

<div class="row justify-content-center">
  <div class="col col-md-6">

    <table class="table table-sm table-bordered">
      <thead class="thead-light">
        <tr>
          <th class="sort-by-title pointer" scope="col"><%=t('title')%>
            <%= octicon 'arrow-up', class: 'text-success hide'%>
            <%= octicon 'arrow-down', class: 'text-success hide'%>
          </th>
          <th scope="col"><%=t('level')%></th>
          <th scope="col"><%=t('questions')%></th>
          <th scope="col"><%=t('actions')%></th>
        </tr>
      <%= render @tests %>
    </table>
  </div>
</div>

