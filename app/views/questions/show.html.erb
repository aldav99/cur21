<h2>Просмотр вопроса: <%= @question.body %></h2>

<ul>
<% @answers.each do |answer| %>
   <li><%= answer.body %></li>
<% end %>
</ul>

<%= link_to 'Delete', 
                 question_path(@question), 
                             method: :delete, 
                             data: { confirm: 'Are you sure?' } %> 