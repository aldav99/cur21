<h2>Просмотр вопроса: <%= @question.body %></h2>


<% @answers.each do |answer| %>
  <ul>
   <li><%= answer.body %></li>
  </ul>
<% end %>

<%= link_to 'Delete', 
                 question_path(@question), 
                             method: :delete, 
                             data: { confirm: 'Are you sure?' } %> 