<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= badge.imgfile %></td>

  <td class="align-middle"><%= badge.rule_name %></td>
  <td class="align-middle"><%= badge.rule_value %></td>

  
  <td class="align-middle"><%= link_to t('show'), admin_badge_path(badge), class: "badge badge-primary" %></td>
  <td class="align-middle">
    <%= link_to t('edit'), 
                  edit_admin_badge_path(badge),
                  class: "badge badge-primary" %>
  </td>

  <td class="align-middle">
    <%= link_to t('delete'), 
                admin_badge_path(badge), 
                method: :delete, 
                data: { confirm: t('sure?') }, class: "badge badge-danger" %>
  </td>
</tr>