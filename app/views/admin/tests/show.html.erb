<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <p>
      <strong><%= t('title')%>:</strong>
      <%= t('.header', title: @test.title) %>
    </p>

    <p>
      <strong><%= t('level')%>:</strong>
      <%= @test.level %>
    </p>

    <%= link_to t('edit'), edit_admin_test_path(@test) %> |
    <%= link_to t('back'), admin_tests_path %>

    <h3><%= t('questions')%>: </h3>

    <p>
      <%= link_to t('new_question'), new_admin_test_question_path(@test) %>
    </p>

    <table class="table table-bordered">
    <tr>
      <th scope="col"><%=t('question')%></th>
      <th class="text-center" scope="col" colspan="3"><%=t('actions')%></th>
    </tr>

    <%= render @test.questions %>


    </table>

  </div>
</div>
