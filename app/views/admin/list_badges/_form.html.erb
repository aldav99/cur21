<%= form_with model: [:admin, @list_badge],local: true do |form| %>
  <%= render "shared/errors", resource: @list_badge %>
  <div class="form-group">
    
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, id: :list_badge_title %>
    </p><br>

    <p>
      <%= form.label :imgfile %><br>
      <%= form.text_field :imgfile, id: :list_badge_imgfile %>
    </p>

    <p>
      <%= form.label :category_id %><br>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
    </p>

    <p>
      <%= form.label :level %><br>
      <%= form.number_field :level, in: 1..5, placeholder: "level" %>
    </p>

    <p>
      <%= form.label :try %><br>
      <%= form.check_box(:try, {}, checked_value = "1", unchecked_value = "0") %>
    </p>

    

    <div class="mt-3"><%= form.submit t('save_badge'), class: 'btn btn-primary' %>
    </div>
  </div>


<% end %>


