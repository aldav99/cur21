<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render "shared/errors", resource:  @answer %>
  <div class="form-group">
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
    </p>

    <div class="form-check">
      <%= form.label :correct, class: 'form-check-label' do %>
        <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
        <%= t('correct') %>
      <% end %>
    </div>

    <div class="mt-3"><%= form.submit t('create_answer'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>




